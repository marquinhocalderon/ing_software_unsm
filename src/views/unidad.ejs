  <script>
    // Frontend - función mostrarFormulario
    function mostrarFormulario(idunidad, datos) {
      const unidad = JSON.parse(datos);
  
      Swal.fire({
        title: 'Detalles de la Marca',
        html: `
    <form id="actualizarCategoriaForm" method="post" action="/auth/actualizarunidad/${idunidad}">
      <p>ID: ${unidad.idunidad}</p>
      <div class="form-group">
        <label for="nombre">Nombre de la Categoria:</label>
        <input type="text" class="form-control" id="nombre" name="nombre_categoria" value="${unidad.nombre_unidad || ''}" required>
      </div>
      <div class="form-group">
        <label for="estado">Estado:</label>
        <select class="form-select" id="estado" name="estado_categoria" required>
          <option value="Activo" ${unidad.estado_unidad === 'Activo' ? 'selected' : ''}>Activo</option>
          <option value="Inactivo" ${unidad.estado_unidad === 'Inactivo' ? 'selected' : ''}>Inactivo</option>
        </select>
      </div>
  
      <button class="submit" style="background-color: #4CAF50; border: none; color: white; padding: 10px 24px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; border-radius: 5px; cursor: pointer;" id="registrarBoton">Actualizar</button>
      <a href="#" class="cancel" style="background-color: #d33; border: none; color: white; padding: 10px 24px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; border-radius: 5px; cursor: pointer; margin-left: 10px;" id="cancelarBoton">Cancelar</a>
    </form>
    `,
        showCancelButton: false,
        showConfirmButton: false
      });
      document.getElementById('cancelarBoton').addEventListener('click', () => {
    Swal.close(); // Cierra el cuadro de diálogo sin realizar ninguna acción adicional
  });
  
      document.getElementById('actualizarCategoriaForm').addEventListener('submit', (event) => {
        event.preventDefault();
  
        const idUnidad = idunidad;
        const nombre = document.getElementById('nombre').value;
        const estado = document.getElementById('estado').value;
  
        fetch(`/auth/actualizarunidad/${idUnidad}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            nombre_unidad: nombre,
            estado_unidad: estado
          })
        })
          .then(response => {
            if (response.ok) {
              Swal.fire('Éxito', 'La Unidad se actualizó correctamente', 'success',);
              location.reload(); // Recargar la página después de la actualización exitosa
            } else {
              Swal.fire('Error', 'Hubo un error al actualizar la Unidad', 'error');
            }
          })
          .catch(error => {
            Swal.fire('Error', 'Hubo un error en la solicitud', 'error');
          });
  
        Swal.close();
      });
    }
  
  
  
  
  </script>


<script>
  document.getElementById('botonagregar').addEventListener('click', () => {
    Swal.fire({
      title: 'Agregar Unidad',
      html: `
  <form id="agregarUsuarioForm" method="post" action="/auth/unidad">
    <div class="form-group">
      <label for="nombre">Nombre de la unidad:</label>
      <input type="text" class="form-control" id="nombre" name="nombre_unidad" required>
    </div>
  

    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="estado" name="estado_unidad" value="Activo" checked>
      <label class="form-check-label" for="estado">Activo</label>
    </div>
    <br/>

    <button class="submit" style="background-color: #4CAF50; border: none; color: white; padding: 10px 24px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; border-radius: 5px; cursor: pointer;" id="registrarBoton">Registrar</button>
    <a href="#" class="cancel" style="background-color: #d33; border: none; color: white; padding: 10px 24px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; border-radius: 5px; cursor: pointer; margin-left: 10px;" id="cancelarBoton">Cancelar</a>
  </form>
  `,
      showCancelButton: false, // Ocultar el botón de cancelar de SweetAlert
      showConfirmButton: false // Ocultar el botón de confirmar de SweetAlert
    });
    function validarFormulario() {
      const nombre = document.getElementById('nombre').value;
      const estado = document.getElementById('estado').value;


      if (!nombre || !estado) {
        Swal.fire('Error', 'Debe completar todos los campos', 'error');
        return false;
      }

      return true;
    }
    // Agregar listener de evento para el botón "Registrar"
    document.getElementById('registrarBoton').addEventListener('click', (event) => {
      if (validarFormulario()) {
        document.getElementById('agregarUsuarioForm').submit();
        location.reload();
        Swal.close();

      }
    });
    // Agregar listener de evento para el botón "Cancelar"
    document.getElementById('cancelarBoton').addEventListener('click', () => {

      Swal.close(); // Cerrar la ventana modal de SweetAlert
    });
  });
</script>

