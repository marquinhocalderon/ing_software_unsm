  <script>
    // Frontend - función mostrarFormulario
    function mostrarFormulario(idusuario, datos) {
      const usuario = JSON.parse(datos);
  
      Swal.fire({
        title: 'Detalles del Usuario',
        html: `
          <form id="actualizarPerfilForm" method="post" action="/auth/recuperar/${idusuario}">
            <p>ID: ${usuario.idusuario}</p>
            <div class="form-group">
              <label for="usuario">Usuario:</label>
              <input type="text" class="form-control" id="usuario" name="usuario" value="${usuario.usuario || ''}" readonly required>
            </div>
            <div class="form-group">
              <label for="password">Ingrese su Nueva Contraseña:</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
  
            <button type="submit" class="btn btn-primary">Actualizar</button>
            <button type="button" class="btn btn-secondary" id="cancelarBoton">Cancelar</button>
          </form>
        `,
        showCancelButton: false,
        showConfirmButton: false,
      });
  
      document.getElementById('cancelarBoton').addEventListener('click', () => {
        Swal.close(); // Cierra el cuadro de diálogo sin realizar ninguna acción adicional
      });
  
      document.getElementById('actualizarPerfilForm').addEventListener('submit', (event) => {
        event.preventDefault();
  
        const usuario = document.getElementById('usuario').value;
        const password = document.getElementById('password').value;
  
        fetch(`/auth/recuperar/${idusuario}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            usuario: usuario,
            password: password
          })
        })
          .then(response => {
            if (response.ok) {
              Swal.fire('Éxito', 'El perfil se actualizó correctamente', 'success');
              location.reload(); // Recargar la página después de la actualización exitosa
            } else {
              Swal.fire('Error', 'Hubo un error al actualizar el perfil', 'error');
            }
          })
          .catch(error => {
            Swal.fire('Error', 'Hubo un error en la solicitud', 'error');
          });
  
        Swal.close();
      });
    }
  </script>
  


