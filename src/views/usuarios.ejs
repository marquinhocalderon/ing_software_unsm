  <script>
    async function editar(id) {
      try {
        const response = await axios.get(`/auth/usuarios/${id}`);
        const response2 = await axios.get(`/auth/perfil1`);
        const perfiles = response2.data;
        const datosUsuarios = response.data[0];

        console.log(perfiles);
        console.log(datosUsuarios);
        let perfilOptions = '';

        perfiles.forEach((perfil) => {
          if (perfil.cargo === datosUsuarios.cargo) {
            perfilOptions += `<option value="${perfil.idperfil}" selected>${perfil.cargo}</option>`;
          } else {
            perfilOptions += `<option value="${perfil.idperfil}">${perfil.cargo}</option>`;
          }
        });

        Swal.fire({
          title: 'Detalles del Proveedor',
          html: `
      <form id="actualizarProveedorForm" method="post" enctype="multipart/form-data" action="/auth/usuarios/${datosUsuarios.idusuario}">
        <div class="form-group">
          <label for="nombre">DNI del Usuario:</label>
          <input type="number" class="form-control" id="dni_usuario" name="dni_usuario" value="${datosUsuarios.dni_usuario}" required>
        </div>
        <div class="form-group">
          <label for="nombre">Nombre Completo:</label>
          <input type="text" class="form-control" id="nombre" name="nombre"  value="${datosUsuarios.nombre}" required>
        </div>
        <div class="form-group">
          <label for="usuario">Usuario:</label>
          <input type="text" class="form-control" id="usuario" name="usuario"  value="${datosUsuarios.usuario}" required>
        </div>
        <div class="form-group">
          <label for="imagen">Imagen:</label>
          <input type="file" class="form-control" id="imagen" name="imagen"  value="${datosUsuarios.imagen}" required>
        </div>
     
    

        <div class="form-group">
          <label for="perfil">Unidad:</label>
          <select class="form-select" id="cargo" name="cargo" required>
        ${perfilOptions}           
         </select>
        </div>
        <div class="form-group">
          <label for="estado_producto">Estado:</label>
          <select class="form-select" id="estado_usuario" name="estado_usuario" required>
            <option value="Activo" ${datosUsuarios.estado_usuario === 'Activo' ? 'selected' : ''}>Activo</option>
            <option value="Inactivo" ${datosUsuarios.estado_usuario === 'Inactivo' ? 'selected' : ''}>Inactivo</option>
          </select>
        </div>
        <button type="submit" class="submit" style="background-color: #4CAF50; border: none; color: white; padding: 10px 24px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; border-radius: 5px; cursor: pointer;" id="registrarBoton">Registrar</button>

        <a class="#" style="background-color: #d33; border: none; color: white; padding: 10px 24px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; border-radius: 5px; cursor: pointer; margin-left: 10px;" id="cancelarBoton">Cancelar</a>
      </form>
    `,
          showCancelButton: false,
          showConfirmButton: false
        });
        document.getElementById('cancelarBoton').addEventListener('click', () => {
          Swal.close(); // Cierra el cuadro de diálogo sin realizar ninguna acción adicional
        });


        function validarFormulario() {
          const dni_usuario = document.getElementById('dni_usuario');
          const nombre = document.getElementById('nombre').value;
          const usuario = document.getElementById('usuario').value;
          const imagen = document.getElementById('imagen').value;
          const cargo = document.getElementById('cargo').value;
          const estado = document.getElementById('estado_usuario').value;

          if (!dni_usuario || !nombre || !usuario || !cargo || !estado) {
            Swal.fire('Error', 'Debe completar todos los campos', 'error');
            return false;
          }

          return true;
        }

        document.getElementById('registrarBoton').addEventListener('click', (event) => {
          event.preventDefault();

          if (validarFormulario()) {
            document.getElementById('actualizarProveedorForm').submit();
            Swal.close();
          }
        });

      } catch (error) {
        console.error(error);
      }
    }

  </script>

  <script>
    document.getElementById('botonagregar').addEventListener('click', () => {
      Swal.fire({
        title: 'Agregar Usuarios',
        html: `
      <form id="agregarUsuarioForm" method="post" enctype="multipart/form-data" action="/auth/usuarios">
        <div class="form-group">
          <label for="nombre">DNI del Usuario:</label>
          <input type="number" class="form-control" id="dni_usuario" name="dni_usuario" required>
        </div>
        <div class="form-group">
          <label for="nombre">Nombre Completo:</label>
          <input type="text" class="form-control" id="nombre" name="nombre" required>
