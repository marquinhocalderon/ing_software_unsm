  <script>
    // Frontend - función mostrarFormulario
    function mostrarFormulario(idproveedor, datos) {
      const proveedor = JSON.parse(datos);

      Swal.fire({
        title: 'Detalles del Proveedor',
        html: `
    <form id="actualizarProveedorForm" method="post" action="/actualizarproveedor/${idproveedor}">
      <div class="form-group">
