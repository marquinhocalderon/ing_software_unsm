    // Frontend - función mostrarFormulario
    function mostrarFormulario2(idproveedor, datos) {
      const usuario = JSON.parse(datos);

      Swal.fire({
        title: 'Confirmar eliminación',
        text: '¿Estás seguro de que quieres eliminar este proveedor de la Base de Datos? ',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Eliminar',
        cancelButtonText: 'Cancelar'
      }).then((result) => {
        if (result.isConfirmed) {
          const url = `/eliminarproveedor/${idproveedor}`;
          fetch(url, {
            method: 'DELETE'
          })
            .then(response => {
              if (response.ok) {
                Swal.fire('Éxito', 'El cliente se eliminó correctamente', 'success');
                location.reload(); // Recargar la página después de la eliminación exitosa
              } else {
                Swal.fire('Error', 'Hubo un error al eliminar el cliente', 'error');
              }
            })
            .catch(error => {
              Swal.fire('Error', 'Hubo un error en la solicitud', 'error');
            });
        }
      });
    }
  </script>
