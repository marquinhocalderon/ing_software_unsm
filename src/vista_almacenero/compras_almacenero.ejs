  <script>
    document.getElementById('agregartabla').addEventListener('click', () => {
      Swal.fire({
        title: 'Agregar Productos',
        html: `
        <table id="users" class="table">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Codigo</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Unidad</th>
                    <th scope="col">Precio Venta</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Estado</th>
                    <th>Acciones</th>

                  </tr>
                </thead>
                <tbody class="table-group-divider">
                  <% productos.forEach(function(producto) { %>
                    <tr>
                      <td>
                        <%= producto.idproducto %>
                      </td>
                      <td>
                        <%= producto.codigo_producto %>
                      </td>
                      <td>
                        <%= producto.nombre_producto %>
                      </td>
                      <td>
                        <%= producto.nombre_unidad %>
                      </td>
                      <td>
                        <%= producto.nombre_categoria %>
                      </td>
                      <td>
                        <%= producto.precio_venta %>
                      </td>
                      <td>
                        <%= producto.descripcion %>
                      </td>
                      <td>
                        <%= producto.estado_producto %>
                      </td>
                      <td><button class="btn btn-primary agregarBtn">Agregar</button></td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
          <button id="cancelarAgregarProveedor" class="btn btn-secondary">Cancelar</button>
        `,
        width: '100%',
        showCancelButton: false,
        showConfirmButton: false
      });




      document.querySelectorAll('.agregarBtn').forEach((btn) => {
        btn.addEventListener('click', () => {
          const rowData = btn.parentNode.parentNode.querySelectorAll('td');
          const [idproducto, codigoProducto, descripcion, unidadMedida] = Array.from(rowData).slice(0, 4).map(td => td.textContent.trim());
          const cantidad = '';
          const precioUnitario = '';
          const Total = '';




          const targetTable = document.getElementById('tablaDestino');
          const newRow = document.createElement('tr');
          newRow.innerHTML = `
      <td><input type="text" value="${codigoProducto}" class="form-control"readonly></td>
      <td><input type="text" value="${descripcion}" class="form-control"readonly></td>
      <td><input type="text" value="${unidadMedida}" class="form-control" required readonly></td>
      <td><input type="number" value="${cantidad}" class="form-control cantidad" required></td>
      <td><input type="number" step="0.01" value="${precioUnitario}" class="form-control precio" required></td>
      <td><input type="number"step="0.01" value="${Total}" class="form-control total" readonly required></td>
      <td><button type="button" class="eliminarBtn" >Eliminar</button></td>
      <td><input type="hidden" value="${idproducto}" class="form-control"readonly></td>
    `

            ;

          targetTable.appendChild(newRow);

          Swal.close();

          const cantidadInput = newRow.querySelector('.cantidad');
          const precioInput = newRow.querySelector('.precio');
          const totalInput = newRow.querySelector('.total');
          const eliminarBtn = newRow.querySelector('.eliminarBtn');
          cantidadInput.addEventListener('input', calcularTotal);
          precioInput.addEventListener('input', calcularTotal);
          eliminarBtn.addEventListener('click', () => {
            targetTable.removeChild(newRow);
            calcularSumaTotal();

          });

          function calcularTotal() {
            const cantidadValue = parseFloat(cantidadInput.value);
            const precioValue = parseFloat(precioInput.value);

            if (!isNaN(cantidadValue) && !isNaN(precioValue)) {
              totalInput.value = (cantidadValue * precioValue).toFixed(2);
            } else {
              totalInput.value = '';
            }

            calcularSumaTotal();
          }
        });
      });

      const calcularSumaTotal = () => {
        const totalInputs = document.querySelectorAll('.total');
        let sumaTotal = 0;

        totalInputs.forEach(input => {
          const valor = parseFloat(input.value);
          if (!isNaN(valor)) {
            sumaTotal += valor;
          }

        });

        const costoTotal = parseFloat(document.getElementById('impuesto').value);
        let igv = 0;
        const total = sumaTotal + igv;

        document.getElementById('subtotal').value = sumaTotal.toFixed(2);
        document.getElementById('igv').value = igv.toFixed(2);
        document.getElementById('calculoTotal').value = total.toFixed(2);
        enviarDatosCompras()
      };

      const enviarDatosCompras = () => {
        const filasTabla = document.querySelectorAll('#tablaDestino tr:not(:first-child)');
        const datosCompras = [];

        filasTabla.forEach(fila => {
          const inputs = fila.querySelectorAll('input');
          const [codigoProducto, descripcion, unidadMedida, cantidad, precioUnitario, Total, idproducto] = Array.from(inputs).map(input => input.value);

          const filaCompras = {
            codigoProducto,
            descripcion,
            unidadMedida,
            cantidad,
            precioUnitario,
            Total,
            idproducto
          };
          datosCompras.push(filaCompras);
          console.log(datosCompras)
          const datosComprasInput = document.getElementById('datosComprasInput'); // Reemplaza 'datosComprasInput' con el ID de tu campo de entrada

          // Convertir el arreglo a una cadena JSON
          const datosComprasJSON = JSON.stringify(datosCompras);

          // Asignar el valor al campo de entrada
          datosComprasInput.value = datosComprasJSON;

        })
      }

      document.getElementById('cancelarAgregarProveedor').addEventListener('click', () => {
        Swal.close();
      });

      $(document).ready(function () {
        $('#users').DataTable();
      });
    });
  </script>







  <script>
    document.getElementById('buscarproveedor').addEventListener('click', () => {
      Swal.fire({
        title: 'Agregar Proveedor',
        html: `
        <div style="margin-top: 25px; display: flex; justify-content: start; margin-left: 20px;">
          <a href="/proveedores"
                            style="text-decoration: none; padding: 10px; background-color: rgb(6, 133, 223); color: white; border-radius: 10px; border-color:white"
                            class="btn-primary">Ir a Agregar Proveedor </a>
              </div>
  
          <table id="users" class="table">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Proveedor</th>
                <th scope="col">Ruc</th>
                <th scope="col">Direccion</th>
                <th scope="col">Ciudad</th>
                <th scope="col">Pais</th>
                <th scope="col">Telefono</th>
                <th scope="col">Email</th>
                <th scope="col">Estado</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              <% proveedores.forEach(function(proveedor) { %>
                <tr>
                  <td><%= proveedor.idproveedor %></td>
                  <td><%= proveedor.nombre_empresa %></td>
                  <td><%= proveedor.ruc %></td>
                  <td><%= proveedor.direccion %></td>
                  <td><%= proveedor.ciudad %></td>
                  <td><%= proveedor.pais %></td>
                  <td><%= proveedor.telefono %></td>
                  <td><%= proveedor.email %></td>
                  <td><%= proveedor.estado_proveedor %></td>
                  <td>
                    <input type="radio" name="proveedor" value="<%= proveedor.idproveedor %>" data-proveedor='<%= JSON.stringify(proveedor) %>'>
                 </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
          <button id="agregarProveedor" class="btn btn-primary">Agregar</button>
          <button id="cancelarAgregarProveedor" class="btn btn-secondary">Cancelar</button>
        `,
        width: '100%',
        showCancelButton: false,
        showConfirmButton: false
      });

      document.getElementById('agregarProveedor').addEventListener('click', () => {
        const selectedProveedor = document.querySelector('input[name="proveedor"]:checked');
        if (selectedProveedor) {
          const proveedorData = JSON.parse(selectedProveedor.getAttribute('data-proveedor'));
          document.getElementById('nombre_empresa').value = proveedorData.nombre_empresa;
          document.getElementById('ruc').value = proveedorData.ruc;
          document.getElementById('direccion').value = proveedorData.direccion;
          document.getElementById('idproveedor').value = proveedorData.idproveedor;
          Swal.close();
        } else {
          Swal.fire(`Selecciona un proveedor 
          Por Favor`);
        }
      });

      document.getElementById('cancelarAgregarProveedor').addEventListener('click', () => {
        Swal.close();
      });
      
      

      $(document).ready(function () {
        $('#users').DataTable();
      });
    });
  </script>


